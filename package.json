{
  "name": "togglr",
  "version": "1.1.1",
  "author": "Zili Zhang",
  "description": "A simple Desktop time tracking widget.",
  "main": "electron.prod.js",
  "scripts": {
    "ng": "ng",
    "start": "concurrently \"ng serve\" \"npm run electron\"",
    "build": "ng build",
    "build:prod": "ng build --prod",
    "test": "ng test",
    "lint": "ng lint",
    "electron": "electron electron.dev",
    "postinstall": "electron-builder install-app-deps",
    "builder": "npm run build:prod && npx electron-builder -mw"
  },
  "private": true,
  "build": {
    "productName": "Togglr",
    "icon": "src/assets/app-icons/icon.png",
    "directories": {
      "output": "app-builds"
    }
  },
  "dependencies": {
    "@angular/animations": "^6.1.0",
    "@angular/common": "^6.1.0",
    "@angular/compiler": "^6.1.0",
    "@angular/core": "^6.1.0",
    "@angular/forms": "^6.1.0",
    "@angular/http": "^6.1.0",
    "@angular/platform-browser": "^6.1.0",
    "@angular/platform-browser-dynamic": "^6.1.0",
    "@angular/router": "^6.1.0",
    "core-js": "^2.5.4",
    "luxon": "^1.6.2",
    "rxjs": "~6.2.0",
    "zone.js": "~0.8.26"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.8.0",
    "@angular/cli": "~6.2.1",
    "@angular/compiler-cli": "^6.1.0",
    "@angular/language-service": "^6.1.0",
    "@types/jasmine": "~2.8.8",
    "@types/jasminewd2": "~2.0.3",
    "@types/luxon": "^1.4.1",
    "@types/node": "~8.9.4",
    "codelyzer": "~4.3.0",
    "concurrently": "^4.0.1",
    "electron": "^3.0.9",
    "electron-builder": "^20.36.2",
    "ts-node": "~7.0.0",
    "tslint": "~5.11.0",
    "typescript": "~2.9.2"
  }
}
